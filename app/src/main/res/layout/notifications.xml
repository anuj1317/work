<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    >

    <com.google.android.material.card.MaterialCardView
        android:layout_height="@dimen/_22sdp"
        android:layout_width="@dimen/_22sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginLeft="@dimen/_24sdp"
        android:id="@+id/vector"
        app:strokeColor="@color/white"
        app:strokeWidth="@dimen/_1sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/noti"
        >

        <ImageButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            />

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/noti"
        android:layout_height="@dimen/_24sdp"
        android:layout_width="wrap_content"
        android:textSize="@dimen/_18sdp"
        android:textFontWeight="600"
        android:fontFamily="@font/poppims_semibold"
        android:text="Notification"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/vector"
        android:layout_marginLeft="@dimen/_60sdp"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintBottom_toTopOf="@+id/heading"
        />


    <androidx.cardview.widget.CardView
        android:id="@+id/avataricon1"
        android:layout_width="@dimen/_66sdp"
        android:layout_height="@dimen/_66sdp"
        app:cardCornerRadius="250dp"
        app:cardBackgroundColor="@color/black"
       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        >

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            app:cardCornerRadius="250dp"
            app:cardBackgroundColor="@color/teal_200"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/avataricon"
                android:layout_gravity="center"

                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>


    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_16sdp"
        android:id="@+id/heading"
        app:layout_constraintTop_toBottomOf="@+id/noti"
        app:layout_constraintStart_toStartOf="@+id/vector"
        app:layout_constraintBottom_toTopOf="@+id/headcontext"
        android:text="Benjamin Poole Assigned you a task"
        android:textColor="#5E6272"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_40sdp"
        />

    <LinearLayout
        android:id="@+id/headcontext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/view1"
        android:layout_marginTop="@dimen/_25sdp"
        android:orientation="horizontal"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/avataricon2"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            app:cardCornerRadius="250dp"
            app:cardBackgroundColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_gravity="center_vertical"

            >

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                app:cardCornerRadius="250dp"
                app:cardBackgroundColor="@color/teal_200"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/avatar2"
                    android:layout_gravity="center"

                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            >

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_24sdp"
            android:text="Benjamin Poole"
            android:textSize="@dimen/_14sdp"
            android:textFontWeight="700"
            android:textColor="@color/white"
            />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_48sdp"
            android:text="Nemo enim ipsam voluptatem quia voluptas sit aspernatur aut odit aut fugit,"
            android:textSize="@dimen/_13sdp"
            android:textFontWeight="400"
            android:textColor="#5E6272"
            />

        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Nov 2nd"
            android:textSize="@dimen/_13sdp"
            android:textColor="#BBFFE7"
            />




    </LinearLayout>



    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_60sdp"
        android:background="#5E6272"
        app:layout_constraintTop_toBottomOf="@+id/headcontext"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/heading1"
        />



    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_16sdp"
        android:id="@+id/heading1"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        app:layout_constraintStart_toStartOf="@+id/headcontext"
        app:layout_constraintBottom_toTopOf="@+id/headcontext2"
        android:text="Katharine Wells replied on  your comment"
        android:textColor="#5E6272"
        android:textSize="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_20sdp"
        />

    <LinearLayout
        android:id="@+id/headcontext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/heading1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        android:layout_marginTop="@dimen/_25sdp"
        android:orientation="horizontal"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/avataricon3"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            app:cardCornerRadius="250dp"
            app:cardBackgroundColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_gravity="center_vertical"

            >

            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                app:cardCornerRadius="250dp"
                app:cardBackgroundColor="@color/teal_200"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/avatar5"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            >

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_24sdp"
                android:text="Katharine Wells"
                android:textSize="@dimen/_14sdp"
                android:textFontWeight="700"
                android:textColor="@color/white"
                />
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_48sdp"
                android:text="Nemo enim ipsam voluptatem quia voluptas sit aspernatur aut odit aut fugit,"
                android:textSize="@dimen/_13sdp"
                android:textFontWeight="400"
                android:textColor="#5E6272"
                />

        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:text="Nov 2nd"
            android:textColor="#5E6272"
            android:textSize="@dimen/_13sdp" />

    </LinearLayout>



    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="#5E6272"
        app:layout_constraintTop_toBottomOf="@+id/headcontext2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />














</androidx.constraintlayout.widget.ConstraintLayout>